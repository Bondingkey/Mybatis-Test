<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gzc.mapper.DeptMapper">
<!-- 分布查询第二步 -->
    <select id="selectDeptById" resultType="dept">
        select
            dept_id deptId,
            dept_name deptName
        from
            tbl_dept
        where
            dept_id=#{id}
    </select>
    
    
</mapper>